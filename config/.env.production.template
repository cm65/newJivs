# JiVS Platform - Production Environment Variables Template
# IMPORTANT: Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!

# ============================================
# Application Configuration
# ============================================
SPRING_PROFILE=prod
SERVER_PORT=8080
MANAGEMENT_PORT=8081

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DATABASE_URL=jdbc:postgresql://your-db-host:5432/jivs
DATABASE_USERNAME=jivs_user
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD
REDIS_SSL=true

# ============================================
# Elasticsearch Configuration
# ============================================
ELASTICSEARCH_URIS=https://your-es-host:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=your-rabbitmq-host
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=jivs_user
RABBITMQ_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_MIN_256_BITS

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_EXACTLY_32_CHARS

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=https://jivs.example.com,https://app.jivs.example.com

# ============================================
# Storage Configuration
# ============================================
STORAGE_PROVIDER=s3

# AWS S3
AWS_S3_BUCKET=jivs-production-data
AWS_REGION=us-east-1
AWS_ACCESS_KEY=CHANGE_ME
AWS_SECRET_KEY=CHANGE_ME

# Azure Blob Storage (if using Azure)
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=
# AZURE_CONTAINER=jivs-production

# Google Cloud Storage (if using GCP)
# GCP_PROJECT_ID=
# GCP_BUCKET=
# GCP_CREDENTIALS_PATH=

# ============================================
# External Services
# ============================================
# Email/SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM=noreply@example.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Slack Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# SNS Topic ARN for notifications
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:jivs-alerts

# ============================================
# Monitoring & Logging
# ============================================
# Application Insights (if using Azure)
APPINSIGHTS_INSTRUMENTATION_KEY=

# New Relic (if using New Relic)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=jivs-platform

# Datadog (if using Datadog)
DD_API_KEY=
DD_SITE=datadoghq.com

# ============================================
# Feature Flags
# ============================================
FEATURE_OCR_ENABLED=false
FEATURE_VIRUS_SCAN_ENABLED=true
FEATURE_GDPR_ENABLED=true
FEATURE_CCPA_ENABLED=true

# ============================================
# Performance Tuning
# ============================================
JVM_OPTS=-Xms2g -Xmx4g -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/var/log/jivs/

# ============================================
# Backup Configuration
# ============================================
BACKUP_S3_BUCKET=jivs-backups
BACKUP_RETENTION_DAYS=30

# ============================================
# Camunda BPM
# ============================================
CAMUNDA_ADMIN_USER=admin
CAMUNDA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_ENABLED=true
SSL_KEY_STORE=/etc/ssl/certs/keystore.p12
SSL_KEY_STORE_PASSWORD=CHANGE_ME
SSL_KEY_STORE_TYPE=PKCS12
SSL_KEY_ALIAS=jivs-platform

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# Audit & Compliance
# ============================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_RETENTION_DAYS=2555       # 7 years
GDPR_DATA_DELETION_GRACE_PERIOD_DAYS=30

# ============================================
# Timezone
# ============================================
TZ=UTC
